{
  "name": "upwork-buddy-bookmarklet",
  "version": "1.0.0",
  "description": "TypeScript-based Upwork job analysis bookmarklet",
  "main": "dist/upwork-buddy-snippet.js",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --minify --outfile=dist/upwork-buddy-snippet.js --format=iife --target=es2020",
    "build:dev": "esbuild src/main.ts --bundle --outfile=dist/upwork-buddy-snippet.js --format=iife --target=es2020 --sourcemap",
    "watch": "esbuild src/main.ts --bundle --outfile=dist/upwork-buddy-snippet.js --format=iife --target=es2020 --sourcemap --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["upwork", "bookmarklet", "typescript"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "typescript": "^5.3.2"
  }
}
